<div class="container">
	<% @stud.each do |f| %>
		<ul style="list-style-type: none;"> <br>
			<%= image_tag f.image.url , :size => "150x100" %>
			<li>Name:   <b><%= f.name %></b></li>
			<li>Email:  <%= f.email %></li>
			<li>Phone:  <%= f.phone %></li>
			<li>Gender: <%= f.gender %></li>
			<li>Course: <%= f.course.name %></li>
			<li>Link:   <p id="lil<%=f.id%>" style= "display: inline;"><%= f.link %></p>

		  <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal<%=f.id%>">Show Video</button>
		  </li>
		</ul>
		  <div class="modal fade" id="myModal<%=f.id%>" role="dialog">
		    <div class="modal-dialog">
		    
		      <div class="modal-content">
		        <div class="modal-header">
		          <button type="button" class="close" data-dismiss="modal">&times;</button>
		          <h4 class="modal-title"></h4>
		        </div>
		        <div class="modal-body">
		        <iframe src="" id="vid<%=f.id%>" style="height:200px;width:250px;" > </iframe><br>
		        </div>
		        <div class="modal-footer">
		          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
		        </div>
		      </div> 
		    </div>
		  </div>
		  <script type="text/javascript">
			$(document).ready(function(){
			    let value = $('#lil<%=f.id%>').text();
			    var pos = value.search(".com/")+13;
			    var res = value.slice(pos);
			    $('#vid<%=f.id%>').attr("src" , "https://youtube.com/embed/" + res + "" );
			});
		</script>
	<% end %>
</div>